extends layout.pug

include utils.pug

block content
    +validationErrorSummary(errors)
    form(action='/users/login' method='post' class="form-signin text-center jumbotron")
        img(class="mb-4" src="https://icons-for-free.com/iconfiles/png/512/stachoverflow+stack+stackoverflow+icon-1320192294341608454.png" alt="" width="72" height="72")
        h1(class="h3 mb-3 font-weight-normal") Please sign in
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('Username', 'username', username)
        +field('Password', 'password', '', 'password')
        div(class='py-4')
            button(type='submit' class='btn btn-primary') Login
            a(href='/' class='btn btn-warning ml-2') Cancel
        div
            p: a(href='/users/sign-up') Don't have an account?
        