extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  form(action='/users/sign-up' method='post' class="form-signin text-center jumbotron")
    h1(class="h3 mb-3 font-weight-normal") Please Register
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Username', 'username', user.username)
    +field('Email Address', 'email', user.email)
    +field('Password', 'password', user.password, 'password')
    +field('Confirm Password', 'confirmPassword', '', 'password')
    div(class='py-4')
      button(type='submit' class='btn btn-primary') Sign-up
      a(href='/' class='btn btn-warning ml-2') Cancel
    div
      p: a(href='/users/login') Already have an account?
